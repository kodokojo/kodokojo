        </repository>

        <snapshotRepository>
            <id>kodokojo-releases</id>
            <name>kodokojo-releases</name>
            <url>https://nexus.kodokojo.io/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
